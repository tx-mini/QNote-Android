<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="@dimen/pop_menu_size"
            android:layout_height="match_parent">
            <TextView
                style="@style/pop_menu_text_style"
                android:textColor="#FF70A8FF"
                android:id="@+id/tv_title"
                android:text="2018-7-9笔记"
                android:layout_height="33dp" />

            <View
                android:background="#FFE9E9E9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>

            <TextView
                android:text="重命名"
                style="@style/pop_menu_text_style"/>
            <View
                android:background="#FFE9E9E9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>

            <TextView
                android:id="@+id/tv_move"
                android:text="移动到"
                style="@style/pop_menu_text_style"/>
            <View
                android:background="#FFE9E9E9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>
            <TextView
                android:id="@+id/tv_delete"
                android:text="删除"
                style="@style/pop_menu_text_style"/>
            <View
                android:background="#FFE9E9E9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
