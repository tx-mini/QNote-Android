<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="16sp"
            android:gravity="center"
            android:text="确认要将「2018-7-9笔记」移入垃圾桶么？"
            android:id="@+id/tv_message"
            android:paddingLeft="10dp"
            android:layout_marginTop="39dp"
            android:layout_centerHorizontal="true"
            android:layout_width="223dp"
            android:layout_height="50dp" />

        <Button
            android:layout_marginTop="26dp"
            android:background="@drawable/shape_button_cancel"
            style="@style/dialog_modify_title_button_style"
            android:layout_alignLeft="@id/tv_message"
            android:text="取消"/>

        <Button
            android:layout_marginTop="26dp"
            android:background="@drawable/shape_button_ok"
            android:layout_alignRight="@id/tv_message"
            style="@style/dialog_modify_title_button_style"
            android:text="确定"/>




    </RelativeLayout>

</android.support.v7.widget.CardView>