<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <android.support.v7.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:titleTextColor="#fff"
        android:background="@color/colorPrimary"
        app:title="添加课程"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"

        android:layout_height="@dimen/add_event_item_height">
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/login_text_size"
            android:text="名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_name"
            android:textSize="@dimen/login_text_size"
            android:paddingLeft="10dp"
            android:hint="未填写"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_event_item_height">
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/login_text_size"
            android:text="地点"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_address"
            android:textSize="@dimen/login_text_size"
            android:paddingLeft="10dp"
            android:hint="未填写"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/add_event_margintop"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_event_item_height">
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/login_text_size"
            android:text="持续周数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:onClick="viewClicked"
            android:id="@+id/tv_choose_week"
            android:textSize="@dimen/login_text_size"
            android:paddingLeft="10dp"
            android:text="点击选择"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="@dimen/add_event_margintop"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_event_item_height">
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/login_text_size"
            android:text="结束周数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/login_text_size"
            android:paddingLeft="10dp"
            android:hint="请填写数字"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/add_event_margintop"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_event_item_height">
        <TextView
            android:textColor="#000"
            android:textSize="@dimen/login_text_size"
            android:text="时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:onClick="viewClicked"
            android:focusable="false"
            android:id="@+id/tv_choose_course_time"
            android:textSize="@dimen/login_text_size"
            android:paddingLeft="10dp"
            android:text="点击选择"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:textColor="#fff"
        android:id="@+id/btn_add"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_btn_white"
        android:text="保存"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:textColor="#fff"
        android:id="@+id/btn_save"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_btn_red"
        android:text="删除"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_delete"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:text="删除"
        android:textColor="#fff"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</LinearLayout>
