<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/choose_school_bg"
    android:orientation="vertical"
    tools:context="com.ace.qnote.activity.ImportCourseActivity">


    <LinearLayout
        android:layout_marginLeft="31dp"
        android:layout_marginTop="103dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:text="欢迎"
            android:textSize="@dimen/text_size_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nickname"
            android:textColor="#fff"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_size_welcome"
            android:text="昵称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:textSize="14sp"
        android:layout_marginLeft="31dp"
        android:textColor="#fff"
        android:layout_marginTop="9dp"
        android:text="为给您提供更好的使用体验，请导入课程表"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_chooseUniversity"
        android:gravity="center_vertical"
        style="@style/welcome_edittext"
        android:hint="选择学校"
        android:layout_marginTop="65dp" />
    <EditText
        android:id="@+id/tv_id"
        style="@style/welcome_edittext"
        android:hint="学号" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/tv_password"
        style="@style/welcome_edittext"
        android:hint="教务管理系统密码" />

    <Button
        android:id="@+id/btn_import"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:textSize="18sp"
        android:textColor="#FF676767"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:text="导入课程"
        android:background="@drawable/welcome_button_shape"
        android:layout_width="177dp"
        android:layout_height="@dimen/welcome_button_height" />

    <TextView
        android:id="@+id/tv_skip"
        android:textColor="#FF676767"
        android:textSize="14sp"
        android:layout_marginTop="13dp"
        android:layout_gravity="center"
        android:text="下次再说"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
